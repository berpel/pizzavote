/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

html, body
  height 100%
  width 100%

body
  font-family 'Georgia'
  background-color background-color
  color #444

article

section
  display table
  height 100%
  width: 100%
  .center
    display table-cell
    text-align center
    vertical-align middle

button
  background-color #EF3A4E
  background-image linear-gradient(top, rgba(0,0,0,0), rgba(0,0,0,.15))
  border none
  border-radius 10px
  color #fff
  font-size 32px
  outline none
  padding 16px
  text-shadow -1px -1px 1px rgba(0,0,0,.5)
  &.small
    font-size 16px
    padding 8px

input[type=text]
  border 1px solid #EF3A4E
  border-radius 10px
  box-shadow 0 0 1px rgba(0,0,0,.5) inset
  font-size 32px
  padding 8px
  outline none
  width 400px